{
  "name": "sc2-maplebirch-mod",
  "version": "1.0.0",
  "description": "SugarCube2-ModLoader-Degrees of Lewdity-Maplebirch Frameworks",
  "private": true,
  "types": "dist/maplebirch.d.ts",
  "packageManager": "bun@1",
  "scripts": {
    "clean": "bun run scripts/clean.ts",
    "build": "bun run rspack -- build --mode=production",
    "build:dev": "bun run rspack -- build --mode=development",
    "build:types": "tsup",
    "package": "bun run scripts/package.ts",
    "build:all": "bun run clean && bun run build && bun run build:types && bun run package"
  },
  "dependencies": {
    "core-js": "^3.32.2",
    "howler": "^2.2.4",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.3",
    "jszip": "^3.10.1",
    "lodash-es": "^4.17.21",
    "regenerator-runtime": "^0.14.1",
    "uint8-to-base64": "^0.2.1"
  },
  "devDependencies": {
    "@rspack/cli": "^1.0.0",
    "@rspack/core": "^1.0.0",
    "@types/bun": "^1.3.9",
    "@types/howler": "^2.2.12",
    "@types/jquery": "^3.5.29",
    "@types/js-yaml": "^4.0.5",
    "@types/json5": "^0.0.30",
    "@types/jszip": "^3.4.1",
    "@types/lodash-es": "^4.17.8",
    "@types/node": "^25.2.3",
    "@types/twine-sugarcube": "^2.37.2",
    "patch-package": "^8.0.1",
    "postinstall-postinstall": "^2.1.0",
    "tsup": "^8.5.1",
    "typescript": "^5.3.3",
    "webpack-bundle-analyzer": "^5.2.0"
  }
}