{
  "name": "maplebirch",
  "version": "3.1.9",
  "private": true,
  "description": "SugarCube2-ModLoader-Degrees of Lewdity-Maplebirch Frameworks",
  "type": "commonjs",
  "types": "dist/maplebirch.d.ts",
  "scripts": {
    "dev": "rspack serve",
    "clean": "bun run scripts/clean.ts",
    "build": "bun run rspack -- build --mode=production",
    "build:dev": "bun run rspack -- build --mode=development",
    "build:types": "tsup",
    "package": "bun run scripts/package.ts",
    "build:all": "bun run clean && bun run build && bun run build:types && bun run package",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check"
  },
  "dependencies": {
    "core-js": "^3.32.2",
    "howler": "^2.2.4",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.3",
    "jszip": "^3.10.1",
    "lodash-es": "^4.17.21",
    "regenerator-runtime": "^0.14.1",
    "uint8-to-base64": "^0.2.1"
  },
  "devDependencies": {
    "@rspack/cli": "^1.7.6",
    "@rspack/core": "^1.7.6",
    "@scml/sc2-verlnir": "^1.0.7",
    "@scml/types": "^1.0.7",
    "@types/adm-zip": "^0.5.7",
    "@types/bun": "^1.3.9",
    "@types/howler": "^2.2.12",
    "@types/jquery": "^3.5.29",
    "@types/js-yaml": "^4.0.5",
    "@types/json5": "^0.0.30",
    "@types/jszip": "^3.4.1",
    "@types/lodash-es": "^4.17.8",
    "@types/node": "^25.2.3",
    "@types/twine-sugarcube": "^2.37.2",
    "adm-zip": "^0.5.16",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "oxlint-tsgolint": "^0.14.2",
    "patch-package": "^8.0.1",
    "pkg-types": "^2.3.0",
    "postinstall-postinstall": "^2.1.0",
    "tsup": "^8.5.1",
    "typescript": "^5.3.3",
    "webpack-bundle-analyzer": "^5.2.0"
  },
  "packageManager": "bun@1.3.9",
  "scml": {
    "nickName": {
      "en": "Maplebirch Frameworks",
      "cn": "秋枫白桦框架"
    },
    "alias": [
      "Simple Frameworks"
    ],
    "scriptFileList": [
      "defineSugarCube.js"
    ],
    "dependenceInfo": [
      {
        "modName": "ModLoader",
        "version": ">=2.0.0"
      },
      {
        "modName": "ModLoaderGui",
        "version": ">=1.0.0"
      },
      {
        "modName": "ModSubUiAngularJs",
        "version": ">=1.0.0"
      },
      {
        "modName": "ConflictChecker",
        "version": ">=1.0.0"
      },
      {
        "modName": "BeautySelectorAddon",
        "version": ">=2.0.0"
      },
      {
        "modName": "ReplacePatcher",
        "version": ">=1.0.0"
      },
      {
        "modName": "TweeReplacer",
        "version": ">=1.0.0"
      },
      {
        "modName": "GameVersion",
        "version": ">=0.5.7.9"
      }
    ]
  }
}
